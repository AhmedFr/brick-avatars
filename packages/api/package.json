{
  "name": "@brick-avatars/api",
  "version": "0.1.0",
  "description": "HTTP API for brick-avatar generation (SVG + PNG)",
  "type": "module",
  "main": "./dist/app.cjs",
  "module": "./dist/app.js",
  "types": "./dist/app.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/app.d.ts",
        "default": "./dist/app.js"
      },
      "require": {
        "types": "./dist/app.d.cts",
        "default": "./dist/app.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@brick-avatars/core": "workspace:*",
    "hono": "^4.0.0",
    "@hono/node-server": "^1.0.0",
    "@resvg/resvg-js": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "vitest": "^3.0.0",
    "typescript": "^5.7.0"
  }
}
